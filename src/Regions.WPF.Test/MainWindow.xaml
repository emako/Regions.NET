<Window
    x:Class="Regions.Test.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Regions.Test"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:regions="urn:regions"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Margin="0,20,0,10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="BtnA"
                Width="120"
                Height="40"
                Margin="10"
                Click="BtnA_Click"
                Content="ShowA" />
            <Button
                x:Name="BtnB"
                Width="120"
                Height="40"
                Margin="10"
                Click="BtnB_Click"
                Content="ShowB" />
            <Button
                x:Name="BtnBack"
                Width="120"
                Height="40"
                Margin="10"
                Click="BtnBack_Click"
                Content="GoBack" />
            <Button
                x:Name="BtnForward"
                Width="120"
                Height="40"
                Margin="10"
                Click="BtnForward_Click"
                Content="GoForward" />
        </StackPanel>
        <ContentControl
            x:Name="RegionContent"
            Grid.Row="1"
            regions:RegionManager.RegionName="MainRegion" />
    </Grid>
</Window>
